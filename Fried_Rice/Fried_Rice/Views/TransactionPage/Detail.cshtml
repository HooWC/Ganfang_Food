@{
	ViewData["Title"] = "Detail";
	Layout = null;
}

<!DOCTYPE html>
<html lang="en">
<head>
	<meta charset="UTF-8">
	<meta name="viewport" content="width=device-width, initial-scale=1.0">
	<title>Document</title>
</head>
<body>

	<body style="background-color:#e2e1e0;font-family: Open Sans, sans-serif;font-size:100%;font-weight:400;line-height:1.4;color:#000;">
		<table style="max-width:670px;margin:50px auto 10px;background-color:#fff;padding:50px;-webkit-border-radius:3px;-moz-border-radius:3px;border-radius:3px;-webkit-box-shadow:0 1px 3px rgba(0,0,0,.12),0 1px 2px rgba(0,0,0,.24);-moz-box-shadow:0 1px 3px rgba(0,0,0,.12),0 1px 2px rgba(0,0,0,.24);box-shadow:0 1px 3px rgba(0,0,0,.12),0 1px 2px rgba(0,0,0,.24); border-top: solid 10px rgb(234, 177, 91);">
			<thead>
				<tr>
					<th style="text-align:left;"><img style="max-width: 150px;" src="~/Image/logo.png" alt="bachana tours"></th>
					<th style="text-align:right;font-weight:400;">@ViewBag.time</th>
				</tr>
			</thead>
			<tbody>
				<tr>
					<td style="height:35px;"></td>
				</tr>
				<tr>
					<td colspan="2" style="border: solid 1px #ddd; padding:10px 20px;">
						<p style="font-size:14px;margin:0 0 6px 0;"><span style="font-weight:bold;display:inline-block;min-width:150px">Order status</span><b style="color:green;font-weight:normal;margin:0">@ViewBag.success</b></p>
						<p style="font-size:14px;margin:0 0 6px 0;"><span style="font-weight:bold;display:inline-block;min-width:146px">Transaction ID</span> @ViewBag.tr_noid</p>
						<p style="font-size:14px;margin:0 0 0 0;"><span style="font-weight:bold;display:inline-block;min-width:146px">Order amount</span> RM @ViewBag.total</p>
					</td>
				</tr>
				<tr>
					<td style="height:35px;"></td>
				</tr>
				<tr>
					<td style="width:50%;padding:20px;vertical-align:top">
						<p style="margin:0 0 10px 0;padding:0;font-size:14px;"><span style="display:block;font-weight:bold;font-size:13px">Name</span> @ViewBag.curname</p>
						<p style="margin:0 0 10px 0;padding:0;font-size:14px;"><span style="display:block;font-weight:bold;font-size:13px;">Email</span> @ViewBag.email</p>
						<p style="margin:0 0 10px 0;padding:0;font-size:14px;"><span style="display:block;font-weight:bold;font-size:13px;">ID No.</span> @ViewBag.curnoid</p>
					</td>
					<td style="width:50%;padding:20px;vertical-align:top">
						<p style="margin:0 0 10px 0;padding:0;font-size:14px;"><span style="display:block;font-weight:bold;font-size:13px;">Food Number</span> @ViewBag.count</p>
						<p style="margin:0 0 10px 0;padding:0;font-size:14px;"><span style="display:block;font-weight:bold;font-size:13px;">GST</span> 0%</p>
					</td>
				</tr>
				<tr>
					<td colspan="2" style="font-size:20px;padding:30px 15px 0 15px;">购买餐点</td>
				</tr>
				<tr>
					<td colspan="2" style="padding:15px;">
						@foreach (var i in ViewBag.data)
						{
							<p style="font-size:14px;margin:0;padding:10px;border:solid 1px #ddd;font-weight:bold;">
								<span style="display:block;font-size:13px;font-weight:normal;">@i.name</span> RM @i.price<b style="font-size:12px;font-weight:300;"> / @i.qua 份 /</b>
							</p>
						}

						@*<p style="font-size:14px;margin:0;padding:10px;border:solid 1px #ddd;font-weight:bold;">
						<span style="display:block;font-size:13px;font-weight:normal;">黄金炒饭</span> RM 12.00<b style="font-size:12px;font-weight:300;"> / 2 份 /</b>
						</p>*@
					</td>
				</tr>
			</tbody>
			<tfooter>
				<tr>
					<td colspan="2" style="font-size:14px;padding:50px 15px 0 15px;">
						<strong style="display:block;margin:0 0 10px 0;">Regards</strong> 甘芳之食<br> Gorubathan, Pin/Zip - 735221, Darjeeling, West bengal, India<br><br>
						<b>Phone:</b> 03552-222011<br>
						<b>Email:</b> GanFang@bachanatours.in
					</td>
				</tr>
			</tfooter>
		</table>
	</body>


	<script src=""></script>

</body>
</html>

